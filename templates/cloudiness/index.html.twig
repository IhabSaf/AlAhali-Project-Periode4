{% extends 'base.html.twig' %}

{% block title %}10 cloudiest stations in China{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; padding-top: 20%; text-align: center}
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        button{
            align-content: center;
        }
        table, th, td {
            border:1px solid black;
        }

    </style>
    <div class="example-wrapper">
        <table class=".example-wrapper">
            <tr>
                <th> Station </th>
                <th> Cloudiness in percentage </th>
                <th> Date & Time </th>
            </tr>

            {% for key, data in arr %}
                <tr>
                    {% for sleutel, value in data %}
                        <td>{{ arr[key][sleutel] }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
    <button  name="reload_button" onclick="location.reload()">
        Herlaad de pagina
    </button>
{% endblock %}
