{% extends 'base.html.twig' %}


{% block body %}
    <title>10 cloudiest stations</title>
    <style>
        body {
            background-color: #FFFFFF;
        }
        .example-wrapper { margin: 1em auto; max-width: 900px; width: 100%; font: 18px/1.5 sans-serif; padding-top: 4%; text-align: center}
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px;}
        button{
            align-content: center;
        }
        table, th, td {
            border:1px solid black;
        }

    </style>

    <div class="example-wrapper">
        <button  name="reload_button" onclick="location.reload()">
            Herlaad de pagina
        </button>
    </div>

    <div class="example-wrapper">
        <table class="table">
            <tr>
                <th> Station </th>
                <th> Cloudiness in percentage </th>
                <th> Date & Time </th>
            </tr>

            {% for item in Results %}
                <tr>
                    <td>{{ item.stationName }}</td>
                    <td>{{ item.cldc }}</td>
                    <td>{{ item.timestamp|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
