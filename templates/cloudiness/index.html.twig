{% extends 'base.html.twig' %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 900px; width: 100%; font: 18px/1.5 sans-serif; padding-top: 4%; text-align: center; align-content: center }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px;}

    @media (min-width:992px){
        body {
            background-color: #FFFFFF;
            padding-left: 23%;
            padding-right: 1%;
            padding-top: 2%;
        }
    }


    body {
        background-color: #FFFFFF;
        padding-top: 2%;
    }

    table, th, td {
        align-content: center;
        max-width: 800px;
        border:1px solid black;
    }
    .reload_button {
        margin-right: 18%;
        margin-bottom: 2%;
        padding:15px;

        background-color:#00979F;
        color: #fff;

        border:none;
        border-radius:10px;
        min-height:30px;
        min-width: 120px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .reload_button:hover {
        background-color: #4b2343;
        transition: 0.7s;
    }

</style>
    <title>10 cloudiest stations</title>

    <div class="example-wrapper">
        <button  class="reload_button" onclick="location.reload()">
            Herlaad de pagina
        </button>

        <table class="table">
            <tr>
                <th> Station </th>
                <th> Cloudiness in percentage </th>
                <th> Date & Time </th>
            </tr>

            {% for item in Results %}
                <tr>
                    <td>{{ item.stationName }}</td>
                    <td>{{ item.cldc }}</td>
                    <td>{{ item.timestamp|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
